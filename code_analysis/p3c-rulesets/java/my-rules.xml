<?xml version="1.0"?>

<ruleset name="AlibabaJavaSets" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <description>AlibabaJavaSets</description>

    <exclude-pattern>.*/build/.*</exclude-pattern>

    <rule ref="p3c-rulesets\java\ali-comment.xml">
        <exclude name="AbstractMethodOrInterfaceMethodMustUseJavadocRule"/>
        <exclude name="ClassMustHaveAuthorRule"/>
        <exclude name="AvoidCommentBehindStatementRule"/>
    </rule>
    <rule ref="p3c-rulesets\java\ali-naming.xml">
        <exclude name="ClassNamingShouldBeCamelRule"/>
        <exclude name="LowerCamelCaseVariableNamingRule"/>
    </rule>
    <rule ref="p3c-rulesets\java\ali-concurrent.xml">
        <exclude name="AvoidCallStaticSimpleDateFormatRule"/>
    </rule>
    <rule ref="p3c-rulesets\java\ali-constant.xml">
        <exclude name="UndefineMagicConstantRule"/>
    </rule>
    <rule ref="p3c-rulesets\java\ali-exception.xml"/>
    <rule ref="p3c-rulesets\java\ali-flowcontrol.xml"/>
    <rule ref="p3c-rulesets\java\ali-oop.xml"/>
    <rule ref="p3c-rulesets\java\ali-orm.xml"/>
    <rule ref="p3c-rulesets\java\ali-other.xml"/>
    <rule ref="p3c-rulesets\java\ali-set.xml"/>

</ruleset>
